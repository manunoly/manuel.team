---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero";
import About from "../components/About";
import Skills from "../components/Skills";
import Projects from "../components/Projects";
import Experience from "../components/Experience";
import Education from "../components/Education";
import BlogPreview from "../components/BlogPreview";
import Testimonials from "../components/Testimonials";
import Contact from "../components/Contact";
import Research from "../components/Research";
import portfolioData from "../data/portfolio.json";

const {
	hero,
	about,
	skills,
	projects,
	experience,
	education,
	blog,
	testimonials,
	contact,
} = portfolioData.en;
---

<Layout
	title="Manuel Almaguer | Software Architect | Full Stack Developer"
	lang="en"
	description={hero.subtext}
>
	<main class="space-y-20 pb-20">
		<Hero
			client:load
			name={hero.name}
			tagline={hero.tagline}
			subtext={hero.subtext}
			resumeLink={hero.resumeLink}
		/>

		<About
			client:visible
			title={about.title}
			content={about.content}
			image={about.image}
		/>

		<Skills client:visible skills={skills} lang="en" />

		<Projects client:visible projects={projects} lang="en" />

		<Experience client:visible experience={experience} lang="en" />

		<Education client:visible education={education} lang="en" />

		<Research client:visible data={portfolioData.en.research} lang="en" />

		<BlogPreview client:visible posts={blog} lang="en" />

		<Testimonials client:visible testimonials={testimonials} lang="en" />

		<Contact
			client:visible
			email={contact.email}
			linkedin={contact.linkedin}
			github={contact.github}
			twitter={contact.twitter}
		/>
	</main>
</Layout>
